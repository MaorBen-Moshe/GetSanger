<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:GetSanger.Converters"
             xmlns:vm="clr-namespace:GetSanger.ViewModels"
             xmlns:behaviors="clr-namespace:GetSanger.Behaviors"
             x:Class="GetSanger.Views.EditJobOfferPage"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Dark={StaticResource ContentPageBackgroundColorDark},Light={StaticResource ContentPageBackgroundColorLight}}">

    <ContentPage.BindingContext>
        <vm:EditJobOfferViewModel />
    </ContentPage.BindingContext>
    
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:CategoryToStringConverter x:Key="CategoryToStringConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.TitleView>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Label Text="{Binding NewJobOffer.Title}"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   BackgroundColor="Transparent"
                   Margin="20,0,0,0"/>
        </StackLayout>
    </Shell.TitleView>

    <ContentPage.Content>
        <StackLayout Margin="10">
            <Grid>
                <Entry Text="{Binding NewJobOffer.Category, Converter={StaticResource CategoryToStringConverter}, Mode=OneWay}" 
                       IsReadOnly="True" 
                       Grid.Column="0"
                       TextColor="Red"/>
                <Entry Text="{Binding NewJobOffer.Title}" 
                           Placeholder="Job Title" 
                           Grid.Column="1">
                    <Entry.Behaviors>
                        <behaviors:EntryLengthValidator MinLength="4" MaxLength="20"/>
                    </Entry.Behaviors>
                </Entry>
            </Grid>

            <Grid IsVisible="{Binding IsDeliveryCategory}">
                <Entry Text="{Binding FromLocationString, Mode=OneWay, StringFormat='From: {0}'}"
                       Margin="5"
                       Grid.Column="0" 
                       Grid.ColumnSpan="2"
                       IsReadOnly="True"
                       BackgroundColor="Transparent"/>
                <Button Text="Get Location" Grid.Column="2" Command="{Binding FromLocationCommand}"
                        FontSize="14"/>
            </Grid>

            <Grid>
                <Entry Text="{Binding DestinationLocationString, Mode=OneWay, StringFormat='Destination: {0}'}"
                       Margin="5"
                       Grid.Column="0" 
                       Grid.ColumnSpan="2"
                       BackgroundColor="Transparent"
                       IsReadOnly="True"/>
                <Button Text="Get Location" Grid.Column="2" Command="{Binding DestinationLocationCommand}"
                        FontSize="14"/>
            </Grid>

            <Entry  Text="{Binding NewJobOffer.ClientPhoneNumber, Mode=TwoWay}"
                        Placeholder="Phone number" 
                        Keyboard="Telephone" 
                        x:Name="Phone">
                <Entry.Behaviors>
                    <behaviors:PhoneNumberMaskBehavior />
                    <behaviors:EntryLengthValidator MinLength="11" MaxLength="11"/>
                </Entry.Behaviors>
            </Entry>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Text="Job date:" Padding="10" Grid.Column="0"/>
                <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="StartAndExpand"
                                 Spacing="20"
                                 Grid.Column="1">
                    <DatePicker Format="dd/MM/yyyy" 
                                MinimumDate="{x:Static system:DateTime.Now}" 
                                Date="{Binding NewJobOffer.Date}" />
                    <TimePicker Time="{Binding NewJobOffer.Time}" />
                </StackLayout>
            </Grid>
            <Frame 
                       VerticalOptions="FillAndExpand"
                       Padding="10"
                       Margin="5,5,5,20"
                       HasShadow="True">
                <Editor IsSpellCheckEnabled="True"
                            IsTextPredictionEnabled="True"
                            Placeholder="Job Description"
                            VerticalOptions="FillAndExpand"
                            MaxLength="255"
                            HeightRequest="220"
                            Text="{Binding NewJobOffer.Description}"
                        PlaceholderColor="{AppThemeBinding Dark=Gray, Light=Gray}">
                    <Editor.Keyboard>
                        <Keyboard x:FactoryMethod="Create" >
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeSentence</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Editor.Keyboard>
                </Editor>
            </Frame>
            <Button Text="Send" 
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="EndAndExpand"
                    CornerRadius="20"
                    Margin="5"
                    Command="{Binding SendJobCommand}"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>