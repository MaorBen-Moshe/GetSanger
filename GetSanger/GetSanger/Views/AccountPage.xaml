<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GetSanger.ViewModels"
             x:Class="GetSanger.Views.AccountPage">

    <ContentPage.BindingContext>
        <vm:AccountViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 0.35"
                         AbsoluteLayout.LayoutFlags="All"
                         VerticalOptions="CenterAndExpand"
                         HorizontalOptions="CenterAndExpand">
                <Image Source="{Binding UserImage}"/>
                <Label Text="{Binding CurrentUser.PersonalDetails.NickName, StringFormat='Hello {0}'}"
                       FontSize="Title" 
                       FontAttributes="Italic"/>
            </StackLayout>
            <Grid AbsoluteLayout.LayoutBounds="0.5,0.25, 0.5, 0.05" 
                  AbsoluteLayout.LayoutFlags="All">
                <Label Text="Client" Grid.Column="0"
                       FontAttributes="Bold"
                       x:Name="ClientLabel">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding ChangeModeCommand}"
                            CommandParameter="{Binding Source={x:Reference ClientLabel}, Path=Text}">
                        </TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Sanger" Grid.Column="1"
                       FontAttributes="Bold"
                       x:Name="SangerLabel">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding ChangeModeCommand}"
                            CommandParameter="{Binding Source={x:Reference SangerLabel}, Path=Text}">
                        </TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <StackLayout AbsoluteLayout.LayoutBounds="0.6, 0.4, 1, 0.1"
                         AbsoluteLayout.LayoutFlags="All">
                <Button Text="Edit Profile" Command="{Binding EditProfileCommand}"/>
                <Button Text="Settings" Command="{Binding SettingCommand}"/>
                <Button Text="Link Account with Social Networks" Command="{Binding LinkSocialCommand}" />
            </StackLayout>
            
            <Button Text="Logout" 
                    FontSize="Large"
                    Padding="10, 0, 10, 10" 
                    CornerRadius="20" 
                    AbsoluteLayout.LayoutBounds="0.5, 0.99, 0.99, 0.06" 
                    AbsoluteLayout.LayoutFlags="All"
                    Command="{Binding LogoutCommand}"/>   
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>