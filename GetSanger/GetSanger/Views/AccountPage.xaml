<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GetSanger.ViewModels"
             x:Class="GetSanger.Views.AccountPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:AccountViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 0.35"
                         AbsoluteLayout.LayoutFlags="All"
                         VerticalOptions="CenterAndExpand"
                         HorizontalOptions="CenterAndExpand"
                         Spacing="20">
                <Image Source="{Binding UserImage}" WidthRequest="64" HeightRequest="64"/>
                <Label Text="{Binding CurrentUser.PersonalDetails.NickName, StringFormat='Hello, {0}'}"
                       FontSize="Title" 
                       FontAttributes="Italic"/>
            </StackLayout>
            <Grid AbsoluteLayout.LayoutBounds="0.5,0.3, 0.5, 0.05" 
                  AbsoluteLayout.LayoutFlags="All">
                <Label Text="Client" Grid.Column="0"
                       FontAttributes="Bold"
                       x:Name="ClientLabel">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding ChangeModeCommand}"
                            CommandParameter="{Binding Source={x:Reference ClientLabel}, Path=Text}">
                        </TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Sanger" Grid.Column="1"
                       FontAttributes="Bold"
                       x:Name="SangerLabel">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding ChangeModeCommand}"
                            CommandParameter="{Binding Source={x:Reference SangerLabel}, Path=Text}">
                        </TapGestureRecognizer>
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <Grid AbsoluteLayout.LayoutBounds="0.6, 0.5, 1, 0.4"
                         AbsoluteLayout.LayoutFlags="All">
                <Button Text="Edit Profile" Command="{Binding EditProfileCommand}" Grid.Row="0"/>
                <Button Text="My Ratings" Command="{Binding MyRatingsCommand}" Grid.Row="1"/>
                <Button Text="Settings" Command="{Binding SettingCommand}" Grid.Row="2"/>
                <Button Text="Link Account with Social Networks" Command="{Binding LinkSocialCommand}" Grid.Row="3"/>
            </Grid>
            
            <Button Text="Logout" 
                    FontSize="Large"
                    Padding="10, 0, 10, 10" 
                    CornerRadius="20" 
                    AbsoluteLayout.LayoutBounds="0.5, 0.99, 0.99, 0.06" 
                    AbsoluteLayout.LayoutFlags="All"
                    Command="{Binding LogoutCommand}"/>   
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>