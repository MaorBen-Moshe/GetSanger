<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GetSanger.ViewModels"
             xmlns:controls ="clr-namespace:GetSanger.Controls"
             xmlns:converters="clr-namespace:GetSanger.Converters"
             x:Class="GetSanger.Views.ProfileViewPage">
    
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.TitleView>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Label Text="Profile" 
                   TextColor="White"
                   FontSize="Title"
                   BackgroundColor="Transparent"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </Shell.TitleView>

    
    <ContentPage.Content>
        <StackLayout>
            <Frame HorizontalOptions="EndAndExpand"
                   BackgroundColor="Transparent"
                   Margin="0,10,10,10"
                   Padding="7"
                   CornerRadius="20"
                   BorderColor="Red">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ReportUserCommand}"/>
                </Frame.GestureRecognizers>
                <Label Text="Report" 
                    FontSize="Small"
                    TextColor="Red"
                    TextTransform="None"/>    
            </Frame>

            <StackLayout VerticalOptions="Start"
                     HorizontalOptions="CenterAndExpand"
                     Spacing="0">
                <controls:RoundedImage ImageSource="{Binding UserImage}"
                                       Radius="64" 
                                       Margin="0,5"
                                       HorizontalOptions="Center"
                                       BackgroundColor="Transparent"/>
                <Label Text="{Binding CurrentUser.PersonalDetails.NickName}"
                   FontSize="Title"
                   TextColor="Black"
                   BackgroundColor="Transparent"
                   Margin="0,5"
                   HorizontalOptions="CenterAndExpand"
                   />
            </StackLayout>

            <!--User average rating-->
            <controls:RatingStars Rating="{Binding AverageRating}"
                                          Review="" 
                                          IsImageEnabled="False"
                                          HorizontalOptions="CenterAndExpand"/>

            <Frame Padding="0"
                   BorderColor="Black"
                   Margin="50,20,50,0">
                <TableView VerticalOptions="Center"
                           HeightRequest="136">
                    <TableRoot TextColor="Black">
                        <TableSection Title="Details" TextColor="Black">
                            <ViewCell>
                                <StackLayout Orientation="Horizontal"
                                         Margin="10,0">
                                    <Label Text="Gender: "/>
                                    <Label Text="{Binding  CurrentUser.PersonalDetails.Gender}"/>
                                </StackLayout>
                            </ViewCell>

                            <ViewCell>
                                <StackLayout Orientation="Horizontal"
                                         Margin="10,0">
                                    <Label Text="Birthday: "/>
                                    <Label Text="{Binding  CurrentUser.PersonalDetails.Birthday, StringFormat='{0:dd/MM/yyyy}'}"/>
                                </StackLayout>
                            </ViewCell>
                        </TableSection>
                    </TableRoot>
                </TableView>
            </Frame>

            <Frame Padding="10"
                   BorderColor="Black"
                   Margin="50, 10, 50, 0">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ViewRatingsCommand}" />
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Ratings"  
                           VerticalOptions="Center"
                           HorizontalOptions="StartAndExpand"
                           BackgroundColor="Transparent"/>
                    <Label Text=">" 
                           BackgroundColor="Transparent"
                           HorizontalOptions="EndAndExpand"/>
                </StackLayout>
            </Frame>

            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="CenterAndExpand"
                         VerticalOptions="EndAndExpand"
                         Padding="20">
                <Button Text="Send Message" 
                        BackgroundColor="Transparent"
                        Command="{Binding SendMessageCommand}" />
                <Button Text="Add Rating" 
                        BackgroundColor="Transparent"
                        Command="{Binding AddRatingCommand}"/>
            </StackLayout>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>