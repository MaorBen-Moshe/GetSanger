<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GetSanger.ViewModels"
             xmlns:controls ="clr-namespace:GetSanger.Controls"
             x:Class="GetSanger.Views.ProfileViewPage"
             Padding="0,20,0,0">
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <StackLayout VerticalOptions="CenterAndExpand"
                     HorizontalOptions="CenterAndExpand"
                     Orientation="Horizontal">
            <controls:RoundedImage ImageSource="{Binding UserImage}"
                                   Radius="50" 
                                   Margin="5"
                                   HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding CurrentUser.PersonalDetails.NickName}"
                   FontSize="Title"
                   TextColor="WhiteSmoke"
                   BackgroundColor="Transparent" 
                   HorizontalOptions="CenterAndExpand"
                   Margin="0,5"/>
        </StackLayout>
    </Shell.TitleView>
    
    <ContentPage.Content>
        <StackLayout>
            <!--User average rating-->
            <controls:RatingStars Rating="{Binding AverageRating}"
                                          Review="" 
                                          IsImageEnabled="False"
                                          HorizontalOptions="Center"
                                  Margin="20"/>
            <Grid RowSpacing="0" ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*" />
                    <ColumnDefinition Width="0.7*" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="{Binding  CurrentUser.PersonalDetails.Phone, Mode=TwoWay}" 
                           Margin="10,0,0,0" />
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding  CurrentUser.PersonalDetails.Gender, Mode=TwoWay}"  
                           Margin="10,0,0,0" />
                <Label Grid.Row="1" Grid.Column="0" Text="{Binding  CurrentUser.PersonalDetails.Birthday, Mode=TwoWay, StringFormat='{0:dd/MM/yyyy}'}"  
                           Margin="10,0,0,0"/>
            </Grid>
            <Label Text="Ratings:" FontSize="Large"/>
            <ListView ItemsSource="{Binding Collection}"
                      HasUnevenRows="True"
                      RefreshCommand="{Binding RefreshingCommand}"
                      IsRefreshing="{Binding IsListRefreshing}"
                      IsPullToRefreshEnabled="True"
                      VerticalOptions="CenterAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Label Text="{Binding RatingWriterName}" Grid.Column="0" Grid.Row="1"/>
                                <controls:RatingStars Review="{Binding Description}" 
                                                          Grid.Column="1" Grid.Row="1"
                                                          Rating="{Binding Score}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="Add Rating" Command="{Binding AddRatingCommand}" HorizontalOptions="CenterAndExpand"/>
                <Button Grid.Row="0" Grid.Column="1" Text="Call" Command="{Binding CallCommand}" HorizontalOptions="CenterAndExpand"/>
                <Button Grid.Row="1" Grid.Column="0" Text="Send Message" Command="{Binding SendMessageCommand}" HorizontalOptions="CenterAndExpand"/>
                <Button Grid.Row="1" Grid.Column="1" Text="Report" Command="{Binding ReportUserCommand}" HorizontalOptions="CenterAndExpand"/>
            </Grid>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>