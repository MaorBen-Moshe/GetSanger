<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys ="clr-namespace:System;assembly=mscorlib"
             x:Class="GetSanger.UI_pages.common.JobOfferPage">
    <ContentPage.Content>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Text="Job Offer"
                   FontSize="50"
                   HorizontalOptions="CenterAndExpand"
                   Padding="50"
                   Grid.Row="0"/>
            
            <StackLayout VerticalOptions="Center"
                         Spacing="50"
                         Padding="20"
                         Grid.Row="1">

                <Entry Text="Category here" HorizontalTextAlignment="Center" IsReadOnly="True"/>
                <Entry Placeholder="Location"/> <!--Location Place-->
                <Entry Placeholder="Phone number (optional)" Keyboard="Telephone"/>
                <DatePicker Format="dd MMM yyyy" Date="{x:Static sys:DateTime.Today}"/>
                <Editor IsSpellCheckEnabled="True"
                        IsTextPredictionEnabled="True"
                        Placeholder="Job Description"
                        VerticalOptions="FillAndExpand"
                        HeightRequest="100">
                    <Editor.Keyboard>
                        <Keyboard x:FactoryMethod="Keyboard.Create" >
                            <x:Arguments>
                                <KeyboardFlags>Suggestions,CapitalizeSentence</KeyboardFlags>
                            </x:Arguments>
                        </Keyboard>
                    </Editor.Keyboard>
                </Editor>
            </StackLayout>

            <Button Text="Send" 
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="EndAndExpand"
                    CornerRadius="20"
                    Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>