<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetSanger.UI_pages.sanger.SangerMainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Name="button">
                <Setter Property="Margin" Value="1-5"></Setter>
                <Setter Property="VerticalOptions" Value="Center"></Setter>
                <Setter Property="CornerRadius" Value="20"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Margin="55" Padding="10" HorizontalOptions="Center" VerticalOptions="StartAndExpand" Spacing="50"> 
            <Label LineHeight="1.3"
                   VerticalTextAlignment="Center"
                   Text="Be The Best Sanger You Can!"
                   Padding="20"
                   FontSize="Title" 
                   LineBreakMode="WordWrap"/>
            <Button Text="Current Activities" Style="button"/>
            <Button Text="Pending Jobs" Style="button"/>
            <Button Text="History" Style="button"/>
            <Button Text="My Account" Style="button"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>