<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetSanger.UI_pages.signup.SignupEmailPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="5">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="Registration" FontSize="Title" />
            </StackLayout>
            <Entry Placeholder="Email" Keyboard="Email" x:Name="email"/>
            <Entry IsPassword="True" Placeholder="Password"  x:Name="password"/>
            <Entry IsPassword="True" Placeholder="Confirm Password"  x:Name="confirm"/>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="10">
                <Button Text="Continue" Padding="5" HeightRequest="55" WidthRequest="90" Clicked="Button_Clicked"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>