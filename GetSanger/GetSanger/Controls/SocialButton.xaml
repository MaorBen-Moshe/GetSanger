<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetSanger.Controls.SocialButton">
    <ContentView.Content>
        <Frame CornerRadius="12" x:Name="myFrame" HorizontalOptions="Start" VerticalOptions="Start"
               Margin="2" HasShadow="True" Padding="10"
               Opacity="{AppThemeBinding Dark=1, Light=0.75}"
               BackgroundColor="{AppThemeBinding Dark={StaticResource ButtonBackgroundColorDark}, Light={StaticResource ButtonBackgroundColorLight}}">
               
            <StackLayout Orientation="Horizontal" x:Name="stack">
                <Image x:Name="btnIcon" HeightRequest="20" WidthRequest="20" HorizontalOptions="Start"
                       BackgroundColor="Transparent"/>
                <Label x:Name="btnText" HorizontalOptions="Start" 
                       FontSize="Caption"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>